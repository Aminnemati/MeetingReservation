@model List<MeetingReservation.Models.Meeting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="padding-right: 10px;">جلسات</h2>
@Html.ActionLink("ثبت جلسه جدید","Create",new {id=0},new {@class="button",style= "margin-right: 10px;" })
<table>
    <thead>
    <tr>
        <th>عنوان جلسه</th>
        <th>زمان</th>
        <th>ظرفیت جلسه</th>
        <th>برگزار کننده</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem=>item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomDateTime.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Location.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Initiator.LastName)
            </td>
        </tr>
    }
    </tbody>
</table>

